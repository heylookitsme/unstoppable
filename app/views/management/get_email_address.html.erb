

<div class="container-fluid"  width="100%" style="text-align:center">
  <h2><%= t('.forgot_your_username') %></h2>
  <%= form_for :user, url: send_username_path do |f| %>
    <h4> Please enter the email you used to sign up and we will send you an email with your username.</h4>
    <div class="form-group" style="text-align:left">
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', hint: "Email Address" %>
    </div>

    <div class="form-group">
      <%= f.submit "Send Email", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

