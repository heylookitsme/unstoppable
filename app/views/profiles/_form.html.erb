
<div class="container">
  
  <div class="row">
    <% if URI(request.referer || '').path == '/users/sign_up' %>
      <h4>You are now signed up - please complete some profile information about yourself.</h4>
    <% end %>
  </div>
 
  <%= simple_form_for  @profile, :url => profile_path, html: {multipart: true} do |f| %>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "registration" %>
    <%= f.error_notification %>

    <%= render 'profiles/about_me_partial', profile: @profile, f: f  %>

    <%= render 'profiles/cancer_history_partial', profile: @profile, f: f  %>
      
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>  
