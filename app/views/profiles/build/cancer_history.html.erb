 <div class="container">     
  <div class="row registration-steps row-no-padding">
  
    <div class="col-md-2">
      <div class="registration-step registration-step-complete">
        <div class="number"><div class="circle">1</div></div>
        Basic Info
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step registration-step-complete">
        <div class="number"><div class="circle">2</div></div>
        Confirm Email
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step registration-step-complete">
        <div class="number"><div class="circle">3</div></div>
        About Me
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step registration-step-active">
        <div class="number"><div class="circle">4</div></div>
        Cancer History
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step ">
        <div class="number"><div class="circle">5</div></div>
        Photo
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step ">
        <div class="number"><div class="circle">6</div></div>
        Browse Profiles
      </div>
    </div>
  
  </div>

  <div class="row">
      <div class="col-md-8">
        <h2>My Public Info - Cancer History</h2>
      </div>
      <div class="col-md-1">
      </div>
      <div class="col-md-3 buttons">
        <%= link_to  "< Back", previous_wizard_path, :class => "btn btn-primary  btn-lg" %>
        <%= link_to 'Skip >', next_wizard_path, :class => "btn btn-primary  btn-lg" %>
        <!-- button type="submit" name="skip" value="0" class="btn btn-default btn-lg pull-right">Skip <span class="glyphicon glyphicon-chevron-right"></span></button>
        <div class="pad-md"><a name="back" class="btn btn-default btn-lg pull-right" href="/profiles/register/about"><span class="glyphicon glyphicon-chevron-left"></span> Back</a></div -->
      </div>
  </div>
  <p class="font-sm font-light"><em><span class='font-purple'>This information will become part of your profile so that other members can learn more about you.  Women have told us that sometimes this information is important to them.</span></em></p>
      <hr>
  <div class="row">
    <div class="col-md-8">    
      <%= simple_form_for  @profile, :url => wizard_path, html: {multipart: true} do |f| %>

        <%= f.hidden_field :step_status, :value => "Cancer Me" %>

        <%= f.hidden_field :profile_id, :value => @profile.id %>

        <div class="fieldWrapper">
          <%= f.input :details_about_self , as: :text,label: "About You. Tell us about yourself!" %>
        </div>

        <div class="fieldWrapper">
          <%= f.input :cancer_location, include_blank: "- Select one -", 
            collection: Profile.cancer_locations_list, 
            label: "Cancer Location"  %>
        </div>

        <div class="fieldWrapper">
          <%= f.input :other_cancer_location , label: "Other cancer location:" %>
        </div>


        <div class="fieldWrapper">
          <%= f.input :treatment_status, include_blank: "- Select one -", 
            collection: Profile.treatment_status_descriptions, 
            label: "Which of the following best describes you?"  %>
        </div>

        <div class="fieldWrapper">
          <%= f.input :treatment_description, label: "Please briefly describe your cancer treatments:" %>
        </div>

        <div class="fieldWrapper">

          <%= f.input :part_of_wellness_program, label: "If yes, what program? (list the name and location if possible, for example: INOVA Life with Cancer-Breast Cancer Support Group, Fairfax):", as: :radio_buttons %>
        </div>

        <div class="fieldWrapper">
          <%= f.input :which_wellness_program, label: "Please briefly describe your cancer treatments:",  as: :text %>
        </div>

        <!-- div class="actions">
          <%= f.submit %>
        </div -->
        <div class="fieldWrapper">
            <%= link_to  "< Back", previous_wizard_path, :class => "btn btn-primary btn-lg" %>
            <%= f.button :submit, "Save and Continue", :class => "btn btn-primary btn-lg"%>
            <%= link_to 'Skip >', next_wizard_path, :class => "btn btn-primary btn-lg" %>
        </div>
        <% end %>
    </div>
  </div>
