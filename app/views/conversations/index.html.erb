<h1> All  Conversations </h1>

<% @conversations.each do |conversation| %>
    <div>
        <%= link_to conversation.subject, conversation_path(conversation) %>
    </div>
<% end %>

<%= link_to "New Conversation", new_conversation_path %>

<div class="container">
      
<div id="postman">
<h1>Received Messages</h1>
<ul class="nav nav-tabs" role="tablist">
    <li class="active"><%= link_to "Inbox", conversations_path %></li>
    <li ><a href="/messages/sent/">Sent</a></li>
    <li ><a href="/messages/archives/">Archives</a></li>
</ul>
<br>



<%= form_tag destroy_multiple_conversations_path, method: :delete do %>
<table id="pm_messages" class="table table-striped">
 <thead>
  <tr>
  <th data-sort-ignore="true"><input type="checkbox" id="selectAll"></input></th>
   <th><a href="?o=f">Sender</a></th>

   <th><a href="?o=s">Subject</a></th>
   <th><a href="?o=d">Received</a></th>
  </tr>
 </thead>
 <tbody>
 <% @conversations.each do |conversation| %>
  <tr>
   <td><%= check_box_tag "conversation_ids[]", conversation.id, false, class: 'selectable' %></td>
   <td><%= conversation.messages.last.sender.username %> </td>
   <td><%= link_to conversation.subject, conversation_path(conversation) %> - <%= conversation.messages.last.body %> </td>
   <td><%= conversation.updated_at %></td>
  </tr>
 <% end %> 
 </tbody>
</table>

<span id="pm_buttons">
<div class="btn-group">
<%= submit_tag "Delete selected", :class => 'btn btn-primary btn-xs', method: :delete %>
<button class="btn btn-default" type="submit" onclick="this.form.action='/messages/delete/'"><span class="glyphicon glyphicon-trash"></span> Delete</button>
<button class="btn btn-default" type="submit" onclick="this.form.action='/messages/archive/'"><span class="glyphicon glyphicon-folder-open"></span> Archive</button>

</div>
</span>

<% end %>



</div>


