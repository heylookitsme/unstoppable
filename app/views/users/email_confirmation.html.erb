

 <div class="container">
      
  <div class="row registration-steps row-no-padding">
  
    <div class="col-md-2">
      <div class="registration-step registration-step-complete">
        <div class="number"><div class="circle">1</div></div>
        Basic Info
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step registration-step-complete">
        <div class="number"><div class="circle">2</div></div>
        About Me
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step registration-step-complete">
        <div class="number"><div class="circle">3</div></div>
        Cancer History
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step  registration-step-complete">
        <div class="number"><div class="circle">4</div></div>
        Photo
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step registration-step-active">
        <div class="number"><div class="circle">5</div></div>
        Confirm Email
      </div>
    </div>

    <div class="col-md-2">
      <div class="registration-step ">
        <div class="number"><div class="circle">6</div></div>
        Browse Profiles
      </div>
    </div>

  </div>
</div>

    <div class="container-fluid"  width="100%" style="text-align:center">
      <h1><span class="font-pink">Welcome to 2Unstoppable <%= @user.username %>!</span></h1>
      <p class="font-pink">We are so glad that you signed up and created a profile.  Before you can begin connecting with other members, please confirm your account. 
      </p>
      <br/>
      <p> An email has been sent to <%= @user.email %>
      
      <h2>Email Confirmation</h2>
      <hr>
      <p>If you have not received an email, please click the RESEND button below or contact us at info@2Unstoppable.org)
      </p>
      <%= simple_form_for(@user, as: :user, method: :post, url: resend_confirmation_user_path) do |f| %>
        <%= f.button :submit, "RESEND" %>
      <% end %>

      <%= render "shared/email_footer" %>
    </div>
  

    
