
<div class="container">
<%= stylesheet_link_tag "application" %>
<%= stylesheet_link_tag "registration" %>
<div class="col-md-6">
<h1><%= t('.sign_in') %></h1>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label :username %>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"> <span class="glyphicon glyphicon-user"  id="basic-addon1"></span></span>
        </div>
        <input placeholder="Username" class="form-control input-lg" maxlength="254" size="254" type="text" value="" name="user[username]" id="user_username" aria-label="Username" aria-describedby="basic-addon1" />
      </div>
    </div>

  <div class="form-group">
    <%= f.label :password %>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon12"> <span class="glyphicon glyphicon-lock"  id="basic-addon12"></span></span>
        </div>
        <input autocomplete="current-password" placeholder="Password" class="form-control input-lg" type="password" name="user[password]" id="user_password" aria-label="Password " aria-describedby="basic-addon12"/>
      </div>
  </div>

  <div class="form-group">
    <%= f.submit  t('.sign_in'), class: 'btn btn-primary  btn-lg' %>
  </div>
<% end %>



<%= render 'devise/shared/links' %>

  </div>  
</div>
