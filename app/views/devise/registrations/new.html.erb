<%= stylesheet_link_tag "progressbar" %>
<%= stylesheet_link_tag "registration" %>
<h1><%= t('.sign_up') %></h1>
      
  <div class="row registration-steps row-no-padding">
  
    <div class="col-md-2">
      <div class="registration-step registration-step-active">
        <div class="number"><div class="circle">1</div></div>
        Basic Info
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step ">
        <div class="number"><div class="circle">2</div></div>
        Confirm Email
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step ">
        <div class="number"><div class="circle">3</div></div>
        About Me
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step ">
        <div class="number"><div class="circle">4</div></div>
        Cancer History
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step ">
        <div class="number"><div class="circle">5</div></div>
        Photo
      </div>
    </div>
  
    <div class="col-md-2">
      <div class="registration-step ">
        <div class="number"><div class="circle">6</div></div>
        Browse Profiles
      </div>
    </div>
</div>


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= bootstrap_devise_error_messages! %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, autocomplete: 'username', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <p class="font-sm font-light"><em>Email address will not be seen by other users.</em></p>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :date_of_birth %>
    <p class="font-sm font-light"><em>We don't display your full date of birth. We only use this to calculate and display your age to help find your exercise partner.</em></p>
    <%= f.input :dob, label: false,
    as: :date, start_year: Date.today.year - 90,
    end_year: Date.today.year - 12, 
    order: [:day, :month, :year] %>
  </div>

  <div class="form-group">
    <%= f.label :what_is_your_home_zipcode %>
    <p class="font-sm font-light"><em>Zip code will be kept private, but will be used by our system to find exercise partners near you.</em></p>
    <%= f.text_field :zipcode, autofocus: true, autocomplete: 'zipcode', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>

    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="field">
    <%= flash[:recaptcha_error] %>
    <%= recaptcha_tags site_key: '6Lfan4EUAAAAAEIZvubei6cd_iu65N39lwPo6NGH'
     %>
  </div>

  <div class="form-group">
    <%= f.submit "Next", class: 'btn btn-primary' %>
  </div>
<% end %>

