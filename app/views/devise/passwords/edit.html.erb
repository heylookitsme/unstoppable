<div class="container">

<div class="row">
    <div class="col-md-8">

      <h1><%= t('.reset_password') %> </h1>
      <hr>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= bootstrap_devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>
        <div class="form-group">
          <label class="string required required" for="user_password"> <span class="largeFont" ><%= t('.new_password') %>: </span></label>
          <%= f.input :password, autofocus: true, class: 'form-control', label: false, required: true   %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
          <% end %>
        </div>
        <div class="form-group">
          <label class="string required required" for="user_password_confirmation"> <span class="largeFont" ><%=  t('.confirm_new_password') %>: </span></label>
          <%= f.input :password_confirmation, autocomplete: 'off', class: 'form-control', label: false, required: true  %>
        </div>
        <div class="form-group">
          <%= invisible_recaptcha_tags  text: t('.change_my_password'),  class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
      </div>
  </div>
</div>

