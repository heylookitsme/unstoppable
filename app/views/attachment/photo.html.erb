<div class="container">
<p class="font-sm font-light"><em><span class='font-purple'>Including a photo will help other members feel more comfortable.</span></em></p>

<h1>Photo Upload4</h1>

<%= simple_form_for @profile, :url => attachment_photosave_path(:id => @profile.id), :method => :post, html: {multipart: true } do |f| %> 
   
    <div id="photo-upload-errors" class="hidden alert alert-danger"></div>
    <div class="image-editor">
      <input type="file" name="profile[avatar]" class="cropit-image-input">
      <div class="cropit-preview">
        <div class="preview-text">
          <span class="glyphicon glyphicon-upload"></span>
          <p>Drag and drop a photo here to upload.</p>
        </div>
      </div>

      <div class="controls-wrapper">
        <span class="glyphicon glyphicon-repeat rotate-cw-btn"></span>

        <label for="image-zoom">Resize image</label>
        <span class="glyphicon glyphicon-minus"></span>
        <input id="image-zoom" name="image-zoom" type="range" class="cropit-image-zoom-input">
        <span class="glyphicon glyphicon-plus"></span>
      </div>

      <input type="hidden" name="image-data" class="hidden-image-data">

    </div>

    <% if @profile.step_status ==  "About Me" || @profile.step_status ==  "Cancer History" %>
      <div class="fieldWrapper">
      
              <%= link_to  "< Back", :back, :class => "btn btn-primary btn-lg" %>
              <%= f.button :submit, "Save and Continue", :class => "btn btn-primary btn-lg"%>
              <%= link_to 'Skip >', profiles_thank_you_path, :class => "btn btn-primary btn-lg" %>
      </div>
    <% else %>
      <%= button_to :submit, "Save" %>
      <%= link_to "Cancel", :back %>
    <% end %>

  <% end %>


